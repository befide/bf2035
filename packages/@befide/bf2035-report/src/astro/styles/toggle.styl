
label.toggle {
  flex: 0 0 calc(10 * var(--ui__baseline-height));
  display: flex;
  flex-direction: row;
  // padding calc(0.5 * var(--ui__baseline-height));
  border: 1px solid white;
  font-size: var(--ui__font-size--sm);
  line-height: var(--ui__baseline-height);
  justify-content: flex-start;
  align-items: center;
  cursor: pointer;

  select, input {
    display: inline-block;
    flex: 0;
    font-family: var(--ui__font-family);
  }

  span.label-text {
    flex: 1;
    padding: calc(0.5 * var(--ui__baseline-height));
    white-space: nowrap;
  }

  .state {
    flex: 1;
    padding: calc(0.5 * var(--ui__baseline-height));
  }
}

label input[role='switch']:not(:checked) ~ .state span.on {
  visibility: hidden;
}

label input[role='switch']:checked ~ .state span.off {
  visibility: hidden;
}
