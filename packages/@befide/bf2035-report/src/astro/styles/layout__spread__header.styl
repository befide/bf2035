[data-print-preview='true'] {
  .spread {
    .spread__header {
      grid-area 1 / 1 / 3 / 7;
      
    }
  }
}

.spread__header {
  position relative;
}

.spread__supertitle, .spread__subtitle, .spread__sectionNumber {
  position absolute;
  max-width 35rem;
  height 1rem;
  font-size 1rem;
  line-height 2rem;
  margin-left calc(-1 * var(--page__margin__x));

  
}
.spread__supertitle, .spread__subtitle, .spread__sectionNumber {
  span {
    display inline;
    height 1rem;
    $pathicles-span(header-sm);
  }
  }

.spread__title {
  position absolute;
  font-size 1.5rem;
  line-height 2rem;
  margin-left calc(-1 * var(--page__margin__x));

  span {
    display inline;
    $pathicles-span(header-sm);
    background-color var(--kfb__blue);
    line-height 2rem;
    font-weight var(--font-weight--bold);
    padding-top 0px;
    padding-bottom 0px;
  }
}

.spread.spread, .spread.page {
  .spread__sectionNumber {
    top -5rem;
  }

  .spread__supertitle {
    top -4rem;
  }

  .spread__title {
    top -2rem;
  }

  .spread__subtitle {
    top 2rem;
  }

  .spread__title {
    color white;
  }
}
