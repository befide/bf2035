@import './mixins/'

table.md:before
  content " "
  position: absolute
  background-color: rgba(white, .5)
  z-index: 0
  
  top -.25rem
  bottom -.25rem
  left -.25rem
  right -.25rem
  


table.md
  position relative
  // width 100%

  border-collapse collapse
  background-color gray
  


  td, th
    position: relative
    width 4rem
    height 1.5rem
    
    div 
      position: absolute
      top 0
      left 0
      background-color: white
      font-size var(--font-size--body-xs)
      line-height .5rem
      width 3rem
      height 1rem







  th
    
    
    div 

      text-transform uppercase
      letter-spacing 0.01em
      font-weight var(--font-weight--bold)
      font-size var(--font-size--body-xs)

  td[colspan="2"], th[colspan="2"]
    width 7rem
    div 
      background-color: red
      width 6rem
    

  td[colspan="3"], th[colspan="3"]
    width 11rem
    div 
      background-color: red
      width 10rem
      

  td[colspan="4"], th[colspan="4"]
    width 15rem
    div 
      background-color: red
      width 14rem


  th + th
    div 
      margin-left 0




  tr:nth-child(2n+1) td
    background-color rgba(black, 0.05)


  td.nw
    white-space nowrap

  td.right
    text-align right

  tr.md.hoverable:hover td
    background-color var(--interaction__color--hover-on)
    cursor pointer




  td.nb 
    white-space: nowrap


caption
  padding-right 0.5rem
  text-align left
  font-size var(--font-size--body-sm)
  font-family 'Barlow Condensed';
  caption-side: bottom
  color black
  