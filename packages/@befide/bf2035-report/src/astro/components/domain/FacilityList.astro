---
import facilities from "./facilities.json";

export type Facilities = Facility[];

export interface Facility {
  name: string;
  shortTitle: string;
  longTitle: string;
  description: string;
  isPartOf: string;
  isStageOf: string;
  agendaPath: string;
  hasHost: string;
  usedInResearchAgenda: string;
  isInGermany: string;
  isBmbfFis: string;
  userGroup: string;
  additionalUserGroups: string;
  "links:agenda-topics": string;
  "links:agenda-objectives": string;
  facilityName: string;
  facilityVersion: any;
  layoutGroup: string;
  facilityDescription: string;
  lifeCycle: string;
  particleUsage: string;
  facilityFormFactor: string;
  facilityType: string;
  facilityTypeParticles: string;
  facilityTypeForm: string;
  t0: any;
  "source for t0, t1": string;
  website: string;
}

// import type { Facility } from "@bpde/bf2030-data/index.d";

export interface Props {
  filter: (staff: Facility) => Boolean;
}

const { filter } = Astro.props;


const filteredItems = facilities.filter(filter);
---

<ol class="md">
  {
    filteredItems.map((item) => (
      <li class="affiliation">
        <span class="label">{item.shortTitle}</span>
      </li>
    ))
  }
</ol>
