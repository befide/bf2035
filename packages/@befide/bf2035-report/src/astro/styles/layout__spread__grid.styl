[data-print-preview='false'] {
  .spread__page-grid {
    z-index 100;
    position relative;
  }
}

[data-print-preview='true'] {
  .spread__page-grid {
    z-index 1000;
    position relative;
    display grid;
    margin-top var(--page__margin__top);
    width var(--page__grid__width);
    height var(--page__grid__height);
    grid-column-gap calc(var(--grid__column-gap-in-baselines) * var(--baseline-height));
    grid-row-gap calc(var(--grid__row-gap-in-baselines) * var(--baseline-height));
    grid-template-columns repeat(var(--grid__column-count), calc(var(--grid__row-height-in-baselines) * var(--baseline-height)));
    grid-template-rows repeat(var(--grid__row-count), calc(var(--grid__column-width-in-baselines) * var(--baseline-height)));
  }

  .spread-area--university {
    grid-area 1 / 1 / 7 / 3;
  }

  .spread-area--non-university {
    grid-area 1 / 3 / 7 / 5;
  }

  .spread-area--nutzeranlagen {
    grid-area 1 / 8 / 7 / 10;
  }

  .spread-area--testanlagen {
    grid-area 1 / 10 / 7 / 13;
  }

  .spread-area--community-map {
    grid-area 1 / 4 / 6 / 8;
  }

  .spread-area--community-1 {
    grid-area 8 / 1 / 12 / 4;
  }

  .spread-area--community-2 {
    grid-area 8 / 1 / 12 / 5;
  }

  .spread-area--community-3 {
    grid-area 8 / 5 / 12 / 9;
  }

  .spread-area--community-4 {
    grid-area 8 / 9 / 12 / 13;
  }

  .spread-area--community-5 {
    grid-area 13 / 1 / 14 / 5;
  }

  .spread-area--community-6 {
    grid-area 13 / 5 / 14 / 13;
  }

  .spread-area--community-table {
    grid-area 15 / 1 / 17 / 13;
  }

  .spread-area--intro {
    grid-area 3 / 1 / 8 / 7;
  }

  .spread-area--strategic-starting-point {
    grid-area 1 / 1 / 17 / 5;
  }

  .spread-area--strategic-starting-point-2 {
    grid-area 1 / 5 / 17 / 9;
    padding-top 3rem;
  }

  .spread-area--strategic-interventions {
    grid-area 1 / 9 / 13 / 13;
  }

  .spread-area--strategic-map {
    grid-area 10 / 9 / 17 / 13;
    overflow: hidden
   
  }

  .spread-area--strategic-aside {

    grid-area 1 / 9 / 17 / 13;
    padding-top 3rem
    position: relative
  }

  .spread-area--strategic-aside::before {
      position: absolute;
      content " "
      display: block
      width calc(100%+1rem)
      height calc(100%+1rem)
      top: -.5rem
      left: -.5rem
      z-index: -1

      background-color: rgba(#dddddd, .8);

  }
  .spread-area--full {
    grid-area 3 / 1 / 17 / 13;
  }

  .spread-area--c-1 {
    grid-area 1 / 1 / 8 / 5;
  }

  .spread-area--c-2 {
    grid-area 1 / 5 / 9 / 9;
  }

  .spread-area--c-3 {
    grid-area 1 / 9 / 9 / 13;
  }

  .spread-area--under-header {
    grid-area 3 / 1 / 17 / 13;
  }

  .spread-area--c-1-under-header {
    grid-area 3 / 1 / 17 / 5;
  }

  .spread-area--c-2-under-header {
    grid-area 3 / 5 / 17 / 9;
  }

  .spread-area--c-3-under-header {
    grid-area 3 / 9 / 9 / 13;
  }

  .spread-area--1-7-9-13 {
    grid-area 1 / 7 / 9 / 13;
  }

  .spread--strategic-area section.footnotes {
    grid-area 9 / 1 / 18 / 7;
    align-content end;
  }

  .spread--strategic-area .right section.footnotes {
    display none;
  }

  section.footnotes {
    grid-area 9 / 1 / 18 / 4;
    align-content end;
  }
  
  .right section.footnotes {
    display none;
  }


  .spread-area--c-1_2--full {
    grid-area 1 / 1 / 19 / 7
  }

  .spread-area--c-2_2--full {
    grid-area 1 / 7 / 19 / 13
  }


}

.spread-area--hidden {
  display none;
}