---
import projects from "./european-projects.json";
---

<table class="md">
  <thead>
    <tr>
      <th class="md sm">
        <div>Projekt</div>
      </th>
      <th class="md sm right">
        <div>Programm</div>
      </th>
      <th class="md sm right">
        <div>Start</div>
      </th>
      <th class="md sm">
        <div>Ende</div>
      </th>
      <th class="md sm">
        <div>Beteiligte aus Deutschland</div>
      </th>
    </tr>
  </thead>
  <tbody>
    {
      projects.map((v) => (
        <tr class="md">
          <td class="md sm">
            <div>
              <strong>{v.id}</strong>
            </div>
            <div>{v.longTitle}</div>
          </td>
          <td class="md right">
            <div>{v.programme}</div>
          </td>
          <td class="md right">
            <div>{v.startYear}</div>
          </td>
          <td class="md right">
            <div>{v.endYear}</div>
          </td>

          <td class="md">
            <div>{v.participantsFromGermany}</div>
          </td>
        </tr>
      ))
    }
  </tbody>
  <caption class="md">
    Hochschulen mit Professuren und Lehrveranstaltungen im Bereich
    Beschleunigerforschung (Stand 2022)
  </caption>
</table>
