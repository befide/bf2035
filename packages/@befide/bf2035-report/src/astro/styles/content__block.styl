@import './mixins/index.styl';

section.md {
  margin-top: calc(1 * var(--baseline-height));
  margin-bottom: calc(1 * var(--baseline-height));

}

h2.md, h3.md, h4.md, p.md, li.md {

  color: var(--color-text-base);
}

p.md {
  $baselined-typography(body-md);
  hyphens: auto
  
}

h1.md, h2.md {
  $baselined-typography(body-xl);
  text-transform: uppercase;
  font-weight: var(--font-weight--bold);

}

h3.md {
  $baselined-typography(body-lg);
  text-transform: uppercase;
  font-weight: var(--font-weight--normal);
}

h4.md {
  $baselined-typography(body-md);
  text-transform: none;

  font-family: 'Barlow Semi Condensed';
}

hr.md {
  margin: 0;
  padding: 0;
  height: 1rem;
  border: 0;
}


ul.md, ol.md {
  $baselined-typography(body-md);
  position: relative;
  margin-left: 1rem;

  p.md {
    top: 0;
    margin: 0;
    padding: 0;
  }
}

ul.md.small, ol.md.small, .footnotes ol.md {
  $baselined-typography(body-sm);
  position: relative;
  margin-left: 1rem;

  p.md {
    top: 0;
    margin: 0;
    padding: 0;
  }
}

ul.md, ol.md {
  ul.md, ol.md {
    top: 0;
  }
}

blockquote.md {
  // margin: 1rem 0
  padding 1rem 1rem
  margin 1rem 0rem
  background linear-gradient(to bottom, hsla(280, 100%, 0, 0.1), hsla(280, 100%, 100%, 0.1) 1px, transparent 1px, transparent), linear-gradient(to bottom, hsla(280, 100%, 0, 0.1), hsla(280, 100%, 100%, 1) 1px, transparent 1px, transparent), rgba(#eee, .5)
  font-style: italic;
  cite {
    text-align: right;
  }

  cite > .bib-ref {
    $baselined-typography(body-sm);
    display: inline;
  }

  > ul.md, > ol.md {
    $baselined-typography(body-md);
  }

  > cite.md {
    $baselined-typography(body-md);
    display: block;
  }
}

ul.md li:before {
  position: absolute;
  left: calc(-1 * var(--baseline-height));
  display: inline-block;
  width: 1rem;
  content: 'â€”';
  text-align: center;
  font-weight: bold;
  font-size: 0.8em;
  // font-family Arial
}

ol.md {
  counter-reset: ol-counter;

  li {
    counter-increment: ol-counter;
    position: relative;
  }

  li:before {
    position: absolute;
    left: calc(-1 * var(--baseline-height));
    display: inline-block;
    width: 0.5rem;
    content: counter(ol-counter);
    content: counter(ol-counter, decimal);
    text-align: left;
    font-weight: var(--font-weight--bold);
    font-variant: small-caps;
    opacity: 0.8;
  }
  li li:before {
      left: calc(-2 * var(--baseline-height));
  }
}

.small {
  $baselined-typography(body-sm);
}

.large {
  $baselined-typography(body-md);
  font-weight: var(--font-weight--bold);
}

.center figcaption {
  text-align: center;
}

.footnote-ref {
  position: relative;
  top: -5px;
  font-size: var(font-size--body-xs);
  opacity: 0.5;
}

.footnote-backref {
  display: none;
}

.footnote-item, .footnote-item p {
  display: inline-block;
  margin: 0 !important;
  padding: 0 !important;

  span.inline {
    border: none;
    background-color: transparent;
  }
}

.footnote-item p {
  background-color: rgba(white, 0.8);
}

figure.md {
  
  padding-bottom: 1rem;

  +mq--gte-md() {
    margin: 1rem 0;
  }

  overflow: hidden;
  max-width: calc(100vw - 1 * var(--padding__x));
  // background-image linear-gradient(0, #f0f0f0 48.08%, #ccc 48.08%, #ccc 50%, #f0f0f0 50%, #f0f0f0 98.08%, #ccc 98.08%, #ccc 100%)
  // background-size 100% 1rem
  // background-color: #eee;

  > p {
    $baselined-typography(body-sm);
  }

  figcaption {
    $baselined-typography(body-sm);

  }

  img {
    width: 100%;
  }
}

.line-numbers-mode {
  .line-numbers {
    display: none;
  }
}


cite {
  line-height: 3;
  text-align: left;
}


