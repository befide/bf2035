---
import { getPath, getSlug } from '@utils/getSections';
import type { SectionTreeNode } from '@utils/getSections';

export type Props = {
  node: SectionTreeNode;
};

const { node: tocItem } = Astro.props;
---

<li class={`toc-item depth-${tocItem.depth}`} data-path={getSlug(tocItem.data)}>
  {
    !tocItem.data?.data?.excludeFromToc && (
      <a href={getPath(tocItem.data)}>
        <span class="section-number">
          {tocItem.data && tocItem.data?.data.sectionNumber}
        </span>
        <span class="section-title">
          {tocItem.data && tocItem.data?.data.title}
        </span>
      </a>
    )
  }
  <ul
    class={`toc-items depth-${tocItem.depth + 1}`}
    data-path={getSlug(tocItem.data)}
  >
    {tocItem.children?.map((child) => <Astro.self node={child} />)}
  </ul>
</li>

<style lang="stylus" is:global>
  li.toc-item:before  
    content: " "
    display none;
  // li a
  //   padding-left: 1rem;
  //   // display: inline-block;   
  //   // position: relative;
  
  
  li  > a
    display: flex;   
    // flex-direction row
    gap 1rem
    max-width: 16rem
    
    
    span 
      display inline-block
      $baselined-typography(body-sm);


  .section-number 
    flex: 0 0 3rem;
    // flex-direction row
    text-align: right;
    
  .depth-2 span
    $baselined-typography(body-xl);
    
  .depth-3 span
    $baselined-typography(body-xl);
  .depth-4 span
    $baselined-typography(body-lg);
  
  [id*='mainmatter'].toc-item.depth-2
    margin-bottom: 1rem;
    
  .section-title
    flex: 1 0 5rem
    
  .depth-2 .section-title
    $bold()
    text-transform uppercase
  
  .depth-3 .section-title
    $bold()
    text-transform none
  
  .depth-4 .section-title, [id*='frontmatter'].depth-2 .section-title
      $regular()
      text-transform none

  [id*='mainmatter'].toc-items.depth-3
    display flex
    flex-direction column
  [id*='mainmatter'].toc-items.depth-4
    flex-direction column

  .toc-items.depth-2[data-path="de/01-front-matter/"] .depth-2 .section-title
    text-transform none
    $regular()

  .toc-items.depth-2[data-path="de/02-body-matter/"]
    display flex
    flex-direction row
    width 100%
    margin-top 4rem
    margin-bottom 4rem
    
    gap 1rem

    li
      flex 0 0 15rem


</style>
