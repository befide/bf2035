
.layout {
  display flex;
  flex-direction column;
  width 100vw;
}

.layout__header, .layout__footer {
  width 100vw;
  height calc(3 * var(--ui__baseline-height));
}

.layout__main, .layout__header {
  margin 0 auto;
  transition 200ms;
}

@media screen {
  [data-fit-spread=true] {
    .layout {
      height 100vh;
    }

    .layout__main {
      flex 0 0 calc(100vh - 6 * var(--ui__baseline-height));
      overflow hidden;
    }

    .bleeding-spread {
      margin 0 auto
      transform-origin 0 0;
      transform scale(var(--fit-spread-scale, 1));
    }
  }
}

#footnote-label {
  display none;
}


.layout__header, .layout__footer {
  display: flex;
  box-shadow: 0px 0px 2px #999;
  background-color: #eee;
}
