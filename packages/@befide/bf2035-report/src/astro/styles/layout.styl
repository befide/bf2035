
.layout {
  position relative;
}

.layout__main, .layout__header {
  position relative;
  margin 0 auto;
  transition 200ms;
}


[data-fit-spread=true] #layout__main__wrapper {
  transform-origin 0 0;
  transform: scale(0.66);
  }
 
.layout__main {
  box-shadow 0 0 15px gray;
  // overflow: hidden;
  margin auto;
  // position: absolute
  aspect-ratio 2;
}