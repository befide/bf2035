
.layout {
  display flex;
  flex-direction column;
  width 100vw;
}

.layout__header, .layout__footer {
  width 100vw;
  height calc(3 * var(--ui__baseline-height));
}

.content-wrapper {
  width var(--spread--width);
  margin: 0 auto
}

@media screen {
  [data-fit-spread=true] {
    .layout {
      min-height 100vh;
    }

    .layout__main {
      flex 1 0 calc(100vh - 6 * var(--ui__baseline-height));
    }

    .content-wrapper {
      margin 0 auto;
      transform-origin 50% 0;
      transform scale(var(--fit-spread-scale, 1));
    }
  }
}

#footnote-label {
  display none;
}

.layout__header, .layout__footer {
  display flex;
  box-shadow 0px 0px 2px #999;
  background-color #eee;
}
