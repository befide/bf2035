
@media print {
  .layout__header {
    display: none !important;
  }

  .layout__footer {
    display: none !important;
  }

  .layout__footer {
    padding: 0 !important;
  }

  astro-dev-toolbar {
    display: none !important;
  }
}

@media print {
  div.debug {
    display: none;
  }

  p {
    hyphens: auto;
  }

  :root {
    $VARIABLES__TYPOGRAPHY--PRINT();
  }

  .layout__sidebar, .layout__navbar {
    display: none !important;
  }

  :root {
    $VARIABLES__LAYOUT--PRINT();
  }
}