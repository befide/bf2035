// PAGE
$PRINT__BASELINE_HEIGHT = 14px
$PRINT__BLEED = 0mm // $PRINT__BASELINE_HEIGHT // 0.00001pt // 10.5pt // 3.704167mm
$PRINT__PAGE__WIDTH = 794px // $RESOLUTION*595px // 794px // // 21cm // 794px //21 * 96 / 2.54px // 595.276pt // 210mm // (1207.5pt / 2) // (1610px / 2) // (3220 / 4px) // 213mm // / 1mm * 2.835pt // 595.27559pt // 210mm + 10.5 pt
$PRINT__PAGE__HEIGHT = 1123px // $RESOLUTION*842px //1123px // 29.7cm // 1123px //29.7 * 96 / 2.54px // // 595.276pt // (1207.5pt / 2) // (1610px / 2) // 595.27559pt // // 210mm @ 72dpi
$PRINT__BLEEDING__PAGE__WIDTH = $PRINT__PAGE__WIDTH + 2 * $PRINT__BLEED
$PRINT__BLEEDING__PAGE__HEIGHT = $PRINT__PAGE__HEIGHT + 2 * $PRINT__BLEED
$PRINT__SPREAD__WIDTH = 2 * $PRINT__PAGE__WIDTH
$PRINT__BLEEDING__SPREAD__WIDTH = $PRINT__SPREAD__WIDTH + 2 * $PRINT__BLEED
$PRINT__SPREAD__HEIGHT = $PRINT__PAGE__HEIGHT
$PRINT__BLEEDING__SPREAD__HEIGHT = $PRINT__SPREAD__HEIGHT + 2 * $PRINT__BLEED
$PRINT__COLUMN_COUNT = 12
$PRINT__ROW_COUNT = 16
$PRINT__COLUMN_WIDTH_IN_BASELINES = 3
$PRINT__ROW_HEIGHT_IN_BASELINES = 3
$PRINT__COLUMN_GAP_WIDTH_IN_BASELINES = 1
$PRINT__ROW_GAP_IN_BASELINES = 1
$PRINT__GRID__WIDTH = ($PRINT__COLUMN_COUNT * $PRINT__COLUMN_WIDTH_IN_BASELINES + ($PRINT__COLUMN_COUNT - 1) * $PRINT__COLUMN_GAP_WIDTH_IN_BASELINES) * $PRINT__BASELINE_HEIGHT
$PRINT__PAGE__MARGIN__HORIZONTAL = (($PRINT__PAGE__WIDTH - $PRINT__GRID__WIDTH) / 2)
$PRINT__GRID__HEIGHT = ($PRINT__ROW_COUNT * $PRINT__COLUMN_WIDTH_IN_BASELINES + ($PRINT__ROW_COUNT - 1) * $PRINT__COLUMN_GAP_WIDTH_IN_BASELINES) * $PRINT__BASELINE_HEIGHT
$PRINT__PAGE__MARGIN__LEFT = $PRINT__PAGE__MARGIN__HORIZONTAL
$PRINT__PAGE__MARGIN__RIGHT = $PRINT__PAGE__MARGIN__HORIZONTAL
$PRINT__PAGE__MARGIN__BOTTOM = $PRINT__BASELINE_HEIGHT * 9
$PRINT__PAGE__MARGIN__TOP = $PRINT__PAGE__HEIGHT - $PRINT__GRID__HEIGHT - $PRINT__PAGE__MARGIN__BOTTOM
$PRINT__PAGE__MARGIN__INSIDE = $PRINT__BASELINE_HEIGHT * 4.5
$PRINT__PAGE__MARGIN__OUTSIDE = $PRINT__PAGE__WIDTH - $PRINT__GRID__WIDTH - $PRINT__PAGE__MARGIN__INSIDE

$CONFIG__LAYOUT--PRINT__VARIABLES()
  --baseline-height $PRINT__BASELINE_HEIGHT
  --grid__column-count $PRINT__COLUMN_COUNT
  --grid__column-gap-in-baselines $PRINT__COLUMN_GAP_WIDTH_IN_BASELINES
  --grid__column-width-in-baselines $PRINT__COLUMN_WIDTH_IN_BASELINES
  --grid__row-count $PRINT__ROW_COUNT
  --grid__row-gap-in-baselines $PRINT__ROW_GAP_IN_BASELINES
  --grid__row-height-in-baselines $PRINT__ROW_HEIGHT_IN_BASELINES
  --page__grid__height $PRINT__GRID__HEIGHT
  --page__grid__width $PRINT__GRID__WIDTH
  --page__margin__top $PRINT__PAGE__MARGIN__TOP
  --page__margin__bottom $PRINT__PAGE__MARGIN__BOTTOM
  --page__margin__inside $PRINT__PAGE__MARGIN__INSIDE
  --page__margin__outside $PRINT__PAGE__MARGIN__OUTSIDE
  --page__margin__x $PRINT__PAGE__MARGIN__OUTSIDE
  --page__margin__y $PRINT__PAGE__MARGIN__TOP
  --bleed $PRINT__BLEED
  --page__width $PRINT__PAGE__WIDTH
  --page__height $PRINT__PAGE__HEIGHT
  --bleeding--page--width 210mm //+ 3mm + 3mm
  --bleeding--page--height 297mm //+ 3mm + 3mm
  --spread--width $PRINT__SPREAD__WIDTH
  --spread--height $PRINT__SPREAD__HEIGHT
  --bleeding--spread--width $PRINT__BLEEDING__SPREAD__WIDTH
  --bleeding--spread--height 297mm //+ 3mm + 3mm;


$CONFIG__LAYOUT--PRINT()
  :root[data-print-preview="true"]
    $CONFIG__LAYOUT--PRINT__VARIABLES()
