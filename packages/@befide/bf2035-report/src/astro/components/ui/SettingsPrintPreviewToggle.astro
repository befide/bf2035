<div class="px-4">
  <label class="relative inline-flex items-center cursor-pointer">
    <input
      type="checkbox"
      value=""
      class="sr-only peer"
      name="toggle__print_preview"
      id="toggle__print_preview"
    />
    <div
      class="w-11 h-4 bg-gray-200 rounded-full peer peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"
    >
    </div>
    <span class="ml-2 text-gray-900 dark:text-gray-300">paged view</span>
  </label>
</div>

<script>
  import {
    updateDocumentSettings,
    togglePrintPreview,
  } from "@utils/settingsStore.js";

  updateDocumentSettings.printPreview();
  document.addEventListener(
    "astro:after-swap",
    updateDocumentSettings.printPreview,
  );

  document
    .getElementById("toggle__print_preview")
    ?.addEventListener("click", togglePrintPreview);

  document.addEventListener("keyup", function (e) {
    if (e.ctrlKey && e.code === "KeyP") {
      document.getElementById("toggle__print_preview")?.click();
    }
  });
</script>
