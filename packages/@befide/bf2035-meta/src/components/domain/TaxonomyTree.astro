---
import type {TaxonomyItem} from "@/content.config.taxonomyItems"
import {getTaxonomyItemRoots} from "@/utils/content.taxonomyItems"

import {flattenTreeNodes} from "@/utils/content.tree"

interface Props {
  items: TaxonomyItem[]
}
let {items} = Astro.props

const root = getTaxonomyItemRoots (items)
const list = flattenTreeNodes (root)
---
<table class="tree-table">
    <thead>
    <tr>
        <th>name</th>
    </tr>
    </thead>
    <tbody>
    {
      list.map ((item) => (
                      <tr
                              data-depth={item.depth}
                              data-child-index={item.childIndex}
                              data-has-children={item.children.length > 0}
                      >
                          <td class="tree-table__name tree-table__indent">
                            {(item.children.length > 0) &&
                                    <input
                                            id={"collapsible-" + item.depth + "-" + item.childIndex}
                                            class="toggle"
                                            checked="checked"
                                            type="checkbox"
                                    />
                                    <label
                                            for={"collapsible-" + item.depth + "-" + item.childIndex}
                                            class="lbl-toggle"
                                    >

                                      {item.data.term.en}
                                    </label>

                            }
                            {!(item.children.length > 0) &&

                                    <div class="name">{item.data.term.en}</div>
                                    <div class="">{item.data.definition.en}</div>

                            }
                          </td>
                          <td>{item.data.isAcceleratorResearchSpecific ? "true" : "false"}</td>
                      </tr>
          )
      )
    }
    </tbody>
</table>

<style>
    .tree-table {
        width: 100%;
    }

    .tree-table th:first-child {
        width: 50%;
    }

    .nowrap {
        white-space: nowrap;
    }

    .name {
        font-weight: bold;
        font-size: var(--sl-text-base);
    }

    .type {
        font-style: italic;
    }


</style>
