
// code
$PAGE-NUMBER-DISPLAY ?= none
$FONT-FAMILY--BODY ?= 'Barlow Semi Condensed', sans-serif
$FONT-BASELINE ?= 0.1
$FONT_WEIGHT__BOLD ?= 700
$FONT_WEIGHT__LIGHT ?= 400
$FONT_WEIGHT__REGULAR ?= 400
// SCREEN
$SCREEN__BASELINE-HEIGHT = 24px
$SCREEN__TEXT__FONT_SIZE__XXSMALL ?= 8px
$SCREEN__TEXT__FONT_SIZE__XSMALL ?= 12px
$SCREEN__TEXT__FONT_SIZE__SMALL ?= 18px
$SCREEN__TEXT__FONT_SIZE__REGULAR ?= 20px
$SCREEN__TEXT__FONT_SIZE__LARGE ?= 28px
$SCREEN__TEXT__FONT_SIZE__XLARGE ?= 48px


$SCREEN__HEADER__FONT_SIZE__SMALL ?= 16px
$SCREEN__HEADER__FONT_SIZE__REGULAR ?= 40px
$SCREEN__HEADER__FONT_SIZE__LARGE ?= 30px
$SCREEN__HEADER__FONT_SIZE__LARGE__MD ?= 42px



$SCREEN2PRINT_SCALE = (96 / 72) * 20 / 14 // (2.3333$SCREEN__BASELINE-HEIGHT / 14px)

$SCREEN2PRINT(value)
  round(value / $SCREEN2PRINT_SCALE * 2) / 2

$PRINT__BASELINE-HEIGHT = 14px //?= $SCREEN2PRINT($SCREEN__BASELINE-HEIGHT)
$PRINT__TEXT__FONT_SIZE__XXSMALL ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__XXSMALL)
$PRINT__TEXT__FONT_SIZE__XSMALL ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__XSMALL)
$PRINT__TEXT__FONT_SIZE__SMALL ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__SMALL)
$PRINT__TEXT__FONT_SIZE__REGULAR ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__REGULAR)
$PRINT__TEXT__FONT_SIZE__LARGE ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__LARGE)
$PRINT__TEXT__FONT_SIZE__XLARGE ?= $SCREEN2PRINT($SCREEN__TEXT__FONT_SIZE__XLARGE)

$PRINT__HEADER__FONT_SIZE__SMALL ?= $SCREEN2PRINT($SCREEN__HEADER__FONT_SIZE__SMALL)
$PRINT__HEADER__FONT_SIZE__REGULAR ?= $SCREEN2PRINT($SCREEN__HEADER__FONT_SIZE__REGULAR)
$PRINT__HEADER__FONT_SIZE__LARGE ?= $SCREEN2PRINT($SCREEN__HEADER__FONT_SIZE__LARGE)

$VARIABLES__TYPOGRAPHY()
  --font--baseline $FONT-BASELINE
  --font-family--body $FONT-FAMILY--BODY, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  --font-weight--bold $FONT_WEIGHT__BOLD
  --font-weight--light $FONT_WEIGHT__LIGHT
  --font-weight--regular $FONT_WEIGHT__REGULAR  
  

$VARIABLES__TYPOGRAPHY--PRINT()
  --baseline-height $PRINT__BASELINE-HEIGHT
  $set-baselined-typography('caption-md', $PRINT__TEXT__FONT_SIZE__SMALL, $PRINT__BASELINE-HEIGHT * 0.8, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-xxs', $PRINT__TEXT__FONT_SIZE__XXSMALL, $PRINT__BASELINE-HEIGHT, 0.75, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-xs', $PRINT__TEXT__FONT_SIZE__XSMALL, $PRINT__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-sm', $PRINT__TEXT__FONT_SIZE__SMALL, $PRINT__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-md', $PRINT__TEXT__FONT_SIZE__REGULAR, $PRINT__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-lg', $PRINT__TEXT__FONT_SIZE__LARGE, $PRINT__BASELINE-HEIGHT, 1, 0, 1, $FONT-BASELINE)
  $set-baselined-typography('body-xl', $PRINT__TEXT__FONT_SIZE__XLARGE, $PRINT__BASELINE-HEIGHT, 2, 0, 1, $FONT-BASELINE)
  $set-baselined-typography('ui-sm', $SCREEN__TEXT__FONT_SIZE__SMALL, $SCREEN__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('ui-md', $SCREEN__TEXT__FONT_SIZE__REGULAR, $SCREEN__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)


$VARIABLES__TYPOGRAPHY--SCREEN()
  --baseline-height $SCREEN__BASELINE-HEIGHT
  $set-baselined-typography('caption-md', $SCREEN__TEXT__FONT_SIZE__SMALL, $SCREEN__BASELINE-HEIGHT * 0.75, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-xxs', $SCREEN__TEXT__FONT_SIZE__XXSMALL, $SCREEN__BASELINE-HEIGHT, 0.5, 0.5, 0, $FONT-BASELINE)
  $set-baselined-typography('body-xs', $SCREEN__TEXT__FONT_SIZE__XSMALL, $SCREEN__BASELINE-HEIGHT, 0.5, 0.5, 0, $FONT-BASELINE)
  $set-baselined-typography('body-sm', $SCREEN__TEXT__FONT_SIZE__SMALL, $SCREEN__BASELINE-HEIGHT / 4 * 3, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('body-md', $SCREEN__TEXT__FONT_SIZE__REGULAR, $SCREEN__BASELINE-HEIGHT, 1, 0, 1, $FONT-BASELINE)
  $set-baselined-typography('body-lg', $SCREEN__TEXT__FONT_SIZE__LARGE, $SCREEN__BASELINE-HEIGHT, 1, 0, 1, $FONT-BASELINE)
  $set-baselined-typography('body-xl', $SCREEN__TEXT__FONT_SIZE__XLARGE, $SCREEN__BASELINE-HEIGHT, 2, 0, 1, $FONT-BASELINE)

  $set-baselined-typography('ui-sm', $SCREEN__TEXT__FONT_SIZE__SMALL, $SCREEN__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)
  $set-baselined-typography('ui-md', $SCREEN__TEXT__FONT_SIZE__REGULAR, $SCREEN__BASELINE-HEIGHT, 1, 0, 0, $FONT-BASELINE)


$VARIABLES__TYPOGRAPHY--UI()


$CONFIG__TYPOGRAPHY()
  :root
    $VARIABLES__TYPOGRAPHY()
    font-variant-numeric: tabular-nums;
    

  [data-print-preview='false']
    $VARIABLES__TYPOGRAPHY--SCREEN()
    font-size $SCREEN__BASELINE-HEIGHT

  [data-print-preview='true']
    $VARIABLES__TYPOGRAPHY--PRINT()
    font-size 14px
