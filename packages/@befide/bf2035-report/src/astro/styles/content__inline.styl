p {
  color: var(--color-text-base);
}

a.md {
  color: black;
  text-decoration: none;
  // $link()
}

a.md[href^=http], a.md[href^=mailto] {
  position: relative;

  span {
    padding-right: 1rem;
  }

  &:after {
    position: absolute;
    // top 20%
    right: -0.25rem;
    display: inline;
    width: 1rem;
    height: 0.5rem;
    // background-position 100% 0%
    // background-color var(--color-bg__ui--hoverable)
