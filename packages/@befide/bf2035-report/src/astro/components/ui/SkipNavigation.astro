---
type Props = Record<string, never>;
---

<div class="skip-links">
  <a href="#main">Skip to main content</a>
</div>

<style>
  .skip-links a {
    color: var(--action-color, #222);
    background-color: var(--background, #fff);
    border-bottom-right-radius: 6px;
    padding: 1rem 3.25rem;
    position: absolute;
    display: block;
    z-index: 9999;
    top: -100vh;
    left: 0;
  }

  .skip-links a:hover,
  .skip-links a:focus {
    top: 0;
    outline-offset: 2px;
  }
</style>
