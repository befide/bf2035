{
  "name": "@befide/bf2035-report",
  "version": "0.0.1",
  "license": "EUPL-1.2",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "build:generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 ./public/icons/appicon.svg",
    "build:pdf": "pnpm run build:pdf:1:puppeteer && pnpm run build:pdf:2:shrink-filesize-4-screen && pnpm run build:pdf:4:copy2web",
    "build:pdf:1:puppeteer": "node ./scripts/create-pdf.mjs",
    "build:pdf:2:shrink-filesize-4-print": "gs -sDEVICE=pdfwrite -dCompatibilityLevel=1.4 -dPDFSETTINGS=/prepress -dNOPAUSE  -dBATCH -sOutputFile=./.pdf/beschleunigerforschung-2030__$npm_package_version--prepress.pdf ./.pdf/beschleunigerforschung-2030__$npm_package_version.pdf",
    "build:pdf:2:shrink-filesize-4-screen": "gs -dBandBufferSpace=2000000000  -sBandListStorage=memory -sBandListStorage=memory-dBufferSpace=1000000000   -dNumRenderingThreads=8 -sDEVICE=pdfwrite -dCompatibilityLevel=1.5  -dNOPAUSE   -dBATCH -dDetectDuplicateImages=true -dDownsampleColorImages=true -dDownsampleGrayImages=true -dDownsampleMonoImages=true   -dColorImageResolution=300 -dGrayImageResolution=300 -dMonoImageResolution=300  -dBATCH -sOutputFile=./.pdf/beschleunigerforschung-2030__$npm_package_version--screen.pdf ./.pdf/beschleunigerforschung-2030__$npm_package_version.pdf",
    "build:pdf:3:impose": "./node_modules/cpdf-n/bin/cpdf-mac  -pad-before ./.pdf/beschleunigerforschung-2030__$npm_package_version.pdf 1 AND -twoup-stack AND -rotate 90 -o ./.pdf/beschleunigerforschung-2030__$npm_package_version--imposed.pdf",
    "build:pdf:3:impose-images": "gs -sDEVICE=jpeg  -dNOPAUSE  -r150 -sOutputFile=./.pdf/bf2035-%03d.jpg  ./.pdf/beschleunigerforschung-2030__$npm_package_version--imposed.pdf",
    "build:pdf:4:copy2web": "cp ./.pdf/beschleunigerforschung-2030__$npm_package_version--screen.pdf ./src/.vuepress/public/media/beschleunigerforschung-2030__$npm_package_version--screen.pdf",
    "build:pwa-assets": "pnpm dlx pwa-asset-generator ./media/icons/appicon.svg ./src/.vuepress/public/icons --maskable --maniFest ./src/.vuepress/public/manifest.json --icon-only --favicon --padding 0",
    "build:references": "bun --bun ./scripts/generate-references-from-zotero-csl.ts",
    "check": "astro check",
    "dev": "astro dev",
    "knip": "knip",
    "lint": "npm-run-all --continue-on-error lint:*",
    "lint:astro": "astro check",
    "lint:eslint": "eslint --config ./../../../eslint.config.mjs --fix --ignore-pattern '*/.obsidian/*' src/",
    "lint:prettier": "prettier --write --config ./../../../prettier.config.mjs ./src ./src/**/*.astro",
    "lint:prettier-package": "prettier-package-json --write",
    "notoolbar": "astro preferences disable devToolbar",
    "preview": "astro preview",
    "start": "astro dev",
    "sync": "astro sync"
  },
  "dependencies": {
    "@astrojs/mdx": "2.3.1",
    "@astrojs/sitemap": "3.1.4",
    "@fontsource/barlow-semi-condensed": "5.0.20",
    "@jasikpark/astro-svg-loader": "0.2.0",
    "@nanostores/persistent": "0.10.1",
    "astro": "4.7.0",
    "astro-pagefind": "1.5.0",
    "cytoscape": "3.29.2",
    "cytoscape-bubblesets": "3.2.1",
    "cytoscape-cise": "1.0.0",
    "cytoscape-expand-collapse": "4.1.0",
    "cytoscape-graphml": "1.0.6",
    "cytoscape-layers": "2.4.4",
    "d3-array": "3.2.4",
    "d3-hierarchy": "3.1.2",
    "nanostores": "0.10.3",
    "rehype-add-classes": "1.0.0",
    "rehype-citation": "2.0.0",
    "rehype-rewrite": "4.0.2",
    "rehype-widont": "0.1.1",
    "remark-flexible-containers": "1.2.1",
    "remark-mark-highlight": "0.1.0",
    "remark-sectionize": "2.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.10",
    "@astrojs/ts-plugin": "1.6.1",
    "@citation-js/core": "0.7.11",
    "@citation-js/plugin-bibtex": "0.7.11",
    "@citation-js/plugin-csl": "0.7.11",
    "@types/cytoscape": "3.21.0",
    "@types/d3-hierarchy": "3.1.7",
    "@types/js-yaml": "4.0.9",
    "@vite-pwa/assets-generator": "0.2.4",
    "@vite-pwa/astro": "0.3.1",
    "debug": "4.3.4",
    "dotenv": "16.4.5",
    "eslint": "9.1.1",
    "fs-extra": "11.2.0",
    "knip": "5.11.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "prettier-package-json": "2.8.0",
    "ts-graphviz": "2.1.2",
    "typescript": "5.4.5",
    "vite-plugin-pwa": "0.19.8"
  }
}
