.header-anchor {
  display: none;
}

strong {
  font-weight: var(--font-weight--bold);
}

sup, sub {
  font-size: inherit;
}

sup {
  font-feature-settings: 'numr';
}

sub {
  font-feature-settings: 'dnom' x;
}

em {
  font-style: italic;
}

kbd {
  font-family: monospace;
}

abbr {
  text-decoration: none;
  font-weight: var(--font-weight--bold);
  font-style: italic;
}

note {
  background-color: yellow;
}